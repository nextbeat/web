{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./",
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "./build",
        "paths": {
            "@client/*": ["./client/*"],
            "@actions": ["./client/actions"],
            "@actions/*": ["./client/actions/*"],
            "@analytics/*": ["./client/analytics/*"],
            "@components/*": ["./client/components/*"],
            "@eddy": ["./client/eddy"],
            "@errors": ["./client/errors"],
            "@images/*": ["../client/public/images/*"],
            "@models": ["./client/models"],
            "@models/*": ["./client/models/*"],
            "@reducers/*": ["./client/reducers/*"],
            "@schemas": ["./client/schemas"],
            "@types": ["./client/types"],
            "@upload": ["./client/upload"],
            "@utils": ["./client/utils"]
        },
        "strictNullChecks": false,
        "target": "es5",
        "types": [
            "bluebird-global", "node"
        ]
    },
    "exclude": [
        "../node_modules/"
    ],
    "include": [
        "./client/",
        "./routes/"
    ]
}